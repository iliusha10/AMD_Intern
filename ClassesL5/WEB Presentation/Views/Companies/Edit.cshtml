@model WEB_Presentation.Models.CompanyModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Company</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.EditorFor(model => model.CompanyName, "TextEditor")
        @Html.EditorFor(model => model.Activity, "EnumDropDownEditor")
        @Html.EditorFor(model => model.City, "TextEditor");
        @Html.EditorFor(model => model.Street, "TextEditor")

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

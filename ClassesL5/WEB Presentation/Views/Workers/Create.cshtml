@model WEB_Presentation.Models.AllPersonModel

@{
    ViewBag.Title = "Create Worker";
}

<h2> Create </h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>New worker</h4>
        <hr/>

        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        @Html.EditorFor(model => model.PersonType, "EnumDropDownEditor")


        <div id="Hide">
            <div id="Person">
                @Html.EditorFor(model => model.Firstname, "TextEditor")
                @Html.EditorFor(model => model.Lastname, "TextEditor")
                @Html.EditorFor(model => model.BirthDate, "DateTime")
                @Html.EditorFor(model => model.Street, "TextEditor")
                @Html.EditorFor(model => model.City, "TextEditor")
                @Html.EditorFor(model => model.Companies, "DropDownList", "CompanyId")
            </div>
            <div id="Intern">
                @Html.EditorFor(model => model.AverageMark, "Double")
            </div>
            <div id="Contractor">
                @Html.EditorFor(model => model.Salary, "Double")
                @Html.EditorFor(model => model.WorkExp, "Double")
            </div>
            <div id="Employee">
                @Html.EditorFor(model => model.Department, "TextEditor")
                @Html.EditorFor(model => model.Role, "TextEditor")
            </div>

        </div>

        <div id="Button" class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add skill" class="btn btn-default"/>
                @Html.Action("Skill");
            </div>
        </div>
        <div id="Button2" class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add priviledge" class="btn btn-default" />
            </div>
        </div>

    </div>
    <div id="Button3" class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-info" />
        </div>
    </div>


}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>